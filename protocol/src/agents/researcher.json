{
  "name": "researcher",
  "displayName": "Research Agent",
  "version": "1.0.0",
  "description": "AI agent specialized in research tasks, information gathering, and analysis using LangGraph workflows",
  "role": "SYSTEM",
  "avatar": "https://api.dicebear.com/7.x/bottts/svg?seed=researcher",
  "capabilities": [
    "Web search and information gathering",
    "Document analysis and summarization",
    "Fact checking and verification",
    "Research report generation",
    "Citation management"
  ],
  "langGraphSpec": {
    "workflow": "research_workflow",
    "nodes": [
      {
        "id": "query_analyzer",
        "type": "agent",
        "description": "Analyzes research query and breaks it down into sub-tasks"
      },
      {
        "id": "web_searcher",
        "type": "tool",
        "description": "Performs web searches using multiple search engines"
      },
      {
        "id": "document_processor",
        "type": "agent",
        "description": "Processes and analyzes retrieved documents"
      },
      {
        "id": "fact_checker",
        "type": "agent",
        "description": "Verifies facts and cross-references information"
      },
      {
        "id": "report_generator",
        "type": "agent",
        "description": "Generates comprehensive research reports"
      }
    ],
    "edges": [
      {"from": "query_analyzer", "to": "web_searcher"},
      {"from": "web_searcher", "to": "document_processor"},
      {"from": "document_processor", "to": "fact_checker"},
      {"from": "fact_checker", "to": "report_generator"}
    ],
    "conditionalEdges": [
      {
        "from": "fact_checker",
        "condition": "needs_more_sources",
        "to": "web_searcher"
      }
    ]
  },
  "tools": [
    "google_search",
    "scholarly_search",
    "arxiv_search",
    "wikipedia_api",
    "pdf_processor",
    "url_fetcher"
  ],
  "configuration": {
    "max_sources": 20,
    "min_confidence": 0.7,
    "languages": ["en", "es", "fr"],
    "output_format": "markdown"
  },
  "implementation": "TODO: Implement LangGraph workflow for research agent"
} 