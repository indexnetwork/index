{
  "name": "intent_inferrer",
  "displayName": "Intent Inferrer Agent",
  "description": "Advanced document analysis and intent inference using LangChain's UnstructuredDirectoryLoader and LangGraph workflow automation",
  "version": "3.0.0",
  "category": "analysis",
  "workflow": {
    "nodes": [
      {
        "name": "loadDocuments",
        "description": "Load documents using UnstructuredDirectoryLoader"
      },
      {
        "name": "processDocuments", 
        "description": "Process documents into structured content"
      },
      {
        "name": "generateIntents",
        "description": "Generate intents using LLM analysis"
      }
    ]
  },

  "configuration": {
    "environment_variables": {
      "required": [
        {
          "name": "OPENAI_API_KEY",
          "description": "OpenAI API key for LLM-based intent generation",
          "type": "string"
        }
      ],
      "optional": [
        {
          "name": "UNSTRUCTURED_API_KEY",
          "description": "Unstructured.io API key for advanced document parsing",
          "type": "string",
          "benefit": "Enables parsing of PDFs, DOCX, PPTX, Excel, emails, and more"
        },
        {
          "name": "UNSTRUCTURED_SERVER_URL", 
          "description": "URL for local Unstructured server (Docker)",
          "type": "string",
          "default": "http://localhost:8000",
          "benefit": "Offline document processing with local server"
        },
        {
          "name": "UNSTRUCTURED_API_URL",
          "description": "Custom Unstructured API endpoint",
          "type": "string", 
          "default": "https://api.unstructured.io"
        }
      ]
    },
    
    "limits": {
      "processing_timeout": "300000ms",
      "max_documents_summary": 50,
      "content_preview_length": 1000
    },

    "filtering": {
      "skip_directories": [
        "node_modules", 
        ".git", 
        "dist", 
        "build", 
        ".next", 
        "__pycache__", 
        ".pytest_cache", 
        ".venv", 
        "venv"
      ],
      "unknown_file_handling": "ignore"
    }
  },

  "output_format": {
    "intent_structure": {
      "payload": "string",
      "confidence": "number (0.0-1.0)"
    }
  },

  "integration": {
    "langchain_version": "^0.3.0",
    "unstructured_community": "@langchain/community",
    "langgraph_version": "^0.2.0",
    "memory_persistence": "MemorySaver",
    "state_management": "StateGraph"
  },


  "setup_instructions": {
    "basic": "Works out of the box with OPENAI_API_KEY for text-based files",
    "advanced": "Set UNSTRUCTURED_API_KEY for full document type support", 
    "local": "Run 'docker run -p 8000:8000 -d downloads.unstructured.io/unstructured-io/unstructured-api:latest' and set UNSTRUCTURED_SERVER_URL"
  }
} 